<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "@string/instruction"/>
    
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="500" >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <RelativeLayout
        android:id="@+id/multiple_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <View
            android:id="@+id/view_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintTheme"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/view_center" >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/option_a"
                android:inputType="textCapSentences"
                android:nextFocusDown="@id/edit_text_b"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintTheme"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/view_center" >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/option_b"
                android:inputType="textCapSentences"
                android:nextFocusDown="@id/edit_text_c"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintTheme"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/view_center"
            android:layout_below="@id/text_input_layout_a" >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/option_c"
                android:inputType="textCapSentences"
                android:nextFocusDown="@id/edit_text_d"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/HintTheme"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/text_input_layout_b"
            android:layout_toEndOf="@id/text_input_layout_c" >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/option_d"
                android:inputType="textCapSentences" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/short_answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        android:visibility="gone">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/short_answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/short_answer_fill"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:id="@+id/multiple_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiple_radio_group">
            <RadioButton
                android:id="@+id/radio_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_a" />
            <RadioButton
                android:id="@+id/radio_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_b" />
            <RadioButton
                android:id="@+id/radio_c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_c" />
            <RadioButton
                android:id="@+id/radio_d"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_d" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/true_false_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RadioGroup
            android:id="@+id/true_false_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/true_button" />
            <RadioButton
                android:id="@+id/radio_false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/false_button" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/multiple_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <View
            android:id="@+id/view_center_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>
            <CheckBox
                android:id="@+id/check_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_a"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/view_center_2"/>
            <CheckBox
                android:id="@+id/check_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_b"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/view_center_2"/>
            <CheckBox
                android:id="@+id/check_c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_c"
                android:layout_toStartOf="@id/view_center_2"
                android:layout_below="@id/check_a"/>
            <CheckBox
                android:id="@+id/check_d"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_d"
                android:layout_below="@id/check_b"
                android:layout_toEndOf="@id/check_c"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">
        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_button"/>
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_button"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/clear_button"/>
    </RelativeLayout>
</LinearLayout>